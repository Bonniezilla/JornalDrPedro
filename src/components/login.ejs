<div class="login">
    <h1>Login</h1>  
    <form method="post" action="/login">
      <input type="text" placeholder="Insira seu nome de usuário"
      name="username">
      <input type="password" placeholder="Insira sua senha" 
      name="password">
      <input class="botao" type="submit" value="Login">
    </form>
</div>